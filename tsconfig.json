{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "es6",
        "target": "es6",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "experimentalDecorators": true
    },
    "typeRoots": [
        "./node_modules/@types"
    ],
    "include": [
        "./src"
    ],
    "exclude": [
        "node_modules"
    ]
}